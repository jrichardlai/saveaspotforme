<%= form_for(@reservation) do |f| %>
  <% if @reservation.errors.any? %>
    <div id="error_explanation">
      Please verify the following informations:
    </div>
  <% end %>

  <section class="fields">
    <%= f.label :full_location_name %><br />
    <%= f.text_field :full_location_name %>
    <%= f.label :reserve_at %><br />
    <%= f.text_field :reserve_at %>
    <%= f.label :party_size %><br />
    <%= f.select :party_size, (1..20) %>
    <br />
    <%= f.hidden_field :location_name %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :city %>
    <%= f.hidden_field :state %>
    <%= f.hidden_field :zip %>
    <%= f.hidden_field :latitude %>
    <%= f.hidden_field :longitude %>
    <%= f.hidden_field :phone %>
  </section>

  <section class="submit">
    <%= f.submit %>
  </section>

<% end %>
